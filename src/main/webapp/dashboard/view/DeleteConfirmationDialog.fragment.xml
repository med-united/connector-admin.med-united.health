<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog id="deleteConfirmationDialog" title="Löschen bestätigen">
        <content>
            <Text text="Möchten Sie die ausgewählten Einträge wirklich löschen?"
                class="sapUiSmallMargin" />
        </content>
        <beginButton>
            <Button text="Löschen" press="onConfirmDelete" type="Reject" />
        </beginButton>
        <endButton>
            <Button text="Zurück" press="onCancelDelete" type="Transparent" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>