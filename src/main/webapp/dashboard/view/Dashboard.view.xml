<mvc:View displayBlock="true"
          controllerName="sap.f.ShellBarWithFlexibleColumnLayout.controller.Dashboard" height="100%"
          xmlns="sap.m"
          xmlns:f="sap.f"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:w="sap.ui.integration.widgets"
>
    <f:DynamicPage id="dynamicPageId"
                   toggleHeaderOnTitleClick="false">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="StartmenÃ¼" />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>


        <!-- DynamicPage Content -->
        <f:content>
            <f:GridContainer id="CardContainer">
                <f:layout>
                    <f:GridContainerSettings rowSize="50px" columnSize="50px" gap="10px" />
                </f:layout>
                    <w:Card id="ConnectorListCard" manifest="./dashboard/resources/ConnectorList.json">
                        <w:layoutData>
                            <f:GridContainerItemLayoutData minRows="3" columns="5" />
                        </w:layoutData>
                    </w:Card>
                    <w:Card id="CardsCard" manifest="./dashboard/resources/CardsCard.json">
                        <w:layoutData>
                            <f:GridContainerItemLayoutData minRows="3" columns="10" />
                        </w:layoutData>
                    </w:Card>
            </f:GridContainer>
        </f:content>

        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button type="Accept" text="Accept" />
                <Button type="Reject" text="Reject" />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>

</mvc:View>