<mvc:View displayBlock="true"
          controllerName="sap.f.ShellBarWithFlexibleColumnLayout.controller.Dashboard" height="100%"
          xmlns="sap.m"
          xmlns:f="sap.f"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:w="sap.ui.integration.widgets"
>
    <f:DynamicPage id="dynamicPageId"
                   toggleHeaderOnTitleClick="false">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="StartmenÃ¼" />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>


        <!-- DynamicPage Content -->
        <f:content>
            <f:GridContainer id="CardContainer">
                <f:layout>
                    <f:GridContainerSettings rowSize="200px" columnSize="250px" gap="10px" />
                </f:layout>
            </f:GridContainer>
        </f:content>

        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button type="Accept" text="Accept" />
                <Button type="Reject" text="Reject" />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>

</mvc:View>