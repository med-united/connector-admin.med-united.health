<mvc:View
    controllerName="sap.f.ShellBarWithFlexibleColumnLayout.controller.EnabledAvailable"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    displayBlock="true"
    height="100%"
>
    <ScrollContainer
        height="100%"
        width="100%"
        vertical="true"
    >
        <ToggleButton
            id="revealGrid"
            text="Reveal Grid"
            press="onRevealGrid"
            class="sapUiSmallMarginBegin sapUiSmallMarginTop sapUiTinyMarginBottom"
        />
        <HBox renderType="Bare">
            <f:GridContainer
                id="list1"
                class="sapUiSmallMargin"
                width="20%"
                snapToRow="true"
                items="{ path: '/' }"
            >
                <f:layoutXS>
                    <f:GridContainerSettings
                        rowSize="70px"
                        columnSize="70px"
                        gap="8px"
                    />
                </f:layoutXS>

                <f:Card>
                    <f:layoutData>
                        <f:GridContainerItemLayoutData
                            minRows="{rows}"
                            columns="{columns}"
                        />
                    </f:layoutData>
                    <f:header>
                        <card:Header title="{title}" />
                    </f:header>
                </f:Card>
            </f:GridContainer>
            <f:GridContainer
                id="grid1"
                class="sapUiSmallMargin"
                width="80%"
                snapToRow="true"
                items="{ path: '/' }"
            >
                <f:layoutXS>
                    <f:GridContainerSettings
                        rowSize="70px"
                        columnSize="70px"
                        gap="8px"
                    />
                </f:layoutXS>

                <f:Card>
                    <f:layoutData>
                        <f:GridContainerItemLayoutData
                            minRows="{rows}"
                            columns="{columns}"
                        />
                    </f:layoutData>
                    <f:header>
                        <card:Header title="{title}" />
                    </f:header>
                </f:Card>
            </f:GridContainer>
        </HBox>
    </ScrollContainer>
</mvc:View>
