<mvc:View xmlns="sap.f" xmlns:mvc="sap.ui.core.mvc" xmlns:m="sap.m" displayBlock="true" controllerName="sap.f.ShellBarWithFlexibleColumnLayout.controller.FlexibleColumnLayout" height="100%">
    <m:Page>
        <m:customHeader>
            <ShellBar title="Konnektor Admin Tool" homeIcon="favicon.ico" showNavButton="{= ${/layout} === 'EndColumnFullScreen'}" navButtonPressed="handleBackButtonPressed" />
        </m:customHeader>
        <FlexibleColumnLayout id="fcl" stateChange="onStateChanged" layout="{Layout>/layout}" backgroundDesign="Solid" />
    </m:Page>
</mvc:View>
