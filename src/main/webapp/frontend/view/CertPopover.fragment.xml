<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="certPopover"
		title="{VerifyAll>certRef}"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		placement="Bottom"
		initialFocus="popoverClose">
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					id="popoverClose"
					text="Close"
					press="handlePopoverClosePress" />
			</OverflowToolbar>
		</footer>
		<content>
			<!-- <Text text="{VerifyAll>cardHandle}"/> -->
			<Table items="{CertSubject>/}" width="auto" class="withGrid">
				<columns>
					<Column>
						<Text text="Field" />
					</Column>
					<Column>
						<Text text="Value" />
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<Text text="{CertSubject>field}" />
						<Text text="{CertSubject>value}" />
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Popover>
</core:FragmentDefinition>
