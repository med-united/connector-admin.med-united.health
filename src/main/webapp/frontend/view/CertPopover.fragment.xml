<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="certPopover"
		title="{Name}"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		placement="Bottom"
		initialFocus="popoverClose">
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					id="popoverClose"
					text="Close"
					press="handlePopoverClosePress" />
			</OverflowToolbar>
		</footer>
		<content>
			<Text text="Lorem ipsum"/>
		</content>
	</Popover>
</core:FragmentDefinition>
