<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:uxap="sap.uxap" xmlns:medunited="medunited.base.control" xmlns:name="medunited.care.SharedBlocks.name" xmlns:address="medunited.care.SharedBlocks.address" xmlns:biological="medunited.care.SharedBlocks.biological" xmlns:generalPractitioner="medunited.care.SharedBlocks.generalPractitioner" xmlns:defaultOrganization="medunited.care.SharedBlocks.defaultOrganization" xmlns:insurance="medunited.care.SharedBlocks.insurance" xmlns:medication="medunited.care.SharedBlocks.medication" controllerName="ap.f.ShellBarWithFlexibleColumnLayout.controller.Detail" xmlns:html="http://www.w3.org/1999/xhtml">
    <Page showHeader="false">
        <content>
            <uxap:ObjectPageLayout id="objectPageLayout" showTitleInHeaderContent="true">
                <uxap:headerTitle>
                    <uxap:ObjectPageHeader objectImageURI="{path: 'photo/0', formatter: '.formatter.formatPatientPhoto'}" objectImageShape="Circle" objectImageAlt="Profile picture of patient" objectTitle="{name/[use=official]/family}, {name/[use=official]/given/0}" objectSubtitle="{path: 'birthDate', formatter: '.formatter.formatBirthDateAndAge'}" isObjectIconAlwaysVisible="false" isObjectTitleAlwaysVisible="false" isObjectSubtitleAlwaysVisible="false">
                        <uxap:actions>
                            <uxap:ObjectPageHeaderActionButton type="Transparent" icon="sap-icon://full-screen" press="handleFullScreen" tooltip="Enter Full Screen Mode" visible="{= ${Layout>/actionButtonsInfo/midColumn/fullScreen} !== null }" />
                            <uxap:ObjectPageHeaderActionButton type="Transparent" icon="sap-icon://exit-full-screen" press="handleExitFullScreen" tooltip="Exit Full Screen Mode" visible="{= ${Layout>/actionButtonsInfo/midColumn/exitFullScreen} !== null }" />
                            <uxap:ObjectPageHeaderActionButton type="Transparent" icon="sap-icon://decline" press="handleClose" tooltip="Close column" visible="{= ${Layout>/actionButtonsInfo/midColumn/closeColumn} !== null }" />
                        </uxap:actions>
                    </uxap:ObjectPageHeader>
                </uxap:headerTitle>
                <uxap:sections>
                    <uxap:ObjectPageSection id="personalSection" title="{i18n>titleSectionPersonal}">
                        <uxap:subSections>
                            <uxap:ObjectPageSubSection id="nameSubSection" title="{i18n>titleSubSectionName}">
                                <uxap:blocks>
                                    <name:NameBlock id="nameBlock" showSubSectionMore="true" columnLayout="1" />
                                </uxap:blocks>
                            </uxap:ObjectPageSubSection>
                        </uxap:subSections>
                    </uxap:ObjectPageSection>
                    <uxap:ObjectPageSection id="cardTerminalSection" title="{i18n>titleSectionCardTerminal}">
                        <uxap:subSections>
                            <uxap:ObjectPageSubSection id="cardTerminalSubSection" title="{i18n>titleSectionCardTerminal}">
                                <uxap:blocks>
                                    <Table>
                                        <columns>
                                            <Column>
                                                <Text text="Typ" />
                                            </Column>
                                            <Column>
                                                <Text text="Handle" />
                                            </Column>
                                            <Column>
                                                <Text text="Kartenhalte" />
                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem>
                                                <Text text="{Typ}" />
                                                <Text text="{Handle}" />
                                                <Text text="{CardHolder}" />
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </uxap:blocks>
                            </uxap:ObjectPageSubSection>
                        </uxap:subSections>
                    </uxap:ObjectPageSection>
                    <uxap:ObjectPageSection id="cardSection" title="{i18n>titleSectionCard}">
                        <uxap:subSections>
                            <uxap:ObjectPageSubSection id="cardSubSection" title="{i18n>titleSectionCard}">
                                <uxap:blocks>
                                    <Table>
                                        <columns>
                                            <Column>
                                                <Text text="Name" />
                                            </Column>
                                            <Column>
                                                <Text text="IP" />
                                            </Column>
                                            <Column>
                                                <Text text="Status" />
                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem>
                                                <Text text="{Name}" />
                                                <Text text="{IP}" />
                                                <Text text="{Status}" />
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </uxap:blocks>
                            </uxap:ObjectPageSubSection>
                        </uxap:subSections>
                    </uxap:ObjectPageSection>
                </uxap:sections>
            </uxap:ObjectPageLayout>
        </content>
    </Page>
</mvc:View>