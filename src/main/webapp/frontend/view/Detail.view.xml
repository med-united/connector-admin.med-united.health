<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:uxap="sap.uxap" xmlns:medunited="medunited.base.control" xmlns:name="medunited.care.SharedBlocks.name" xmlns:address="medunited.care.SharedBlocks.address" xmlns:biological="medunited.care.SharedBlocks.biological" xmlns:generalPractitioner="medunited.care.SharedBlocks.generalPractitioner" xmlns:defaultOrganization="medunited.care.SharedBlocks.defaultOrganization" xmlns:insurance="medunited.care.SharedBlocks.insurance" xmlns:medication="medunited.care.SharedBlocks.medication" controllerName="sap.f.ShellBarWithFlexibleColumnLayout.controller.Detail" xmlns:html="http://www.w3.org/1999/xhtml">
    <Page showHeader="false">
        <content>
            <uxap:ObjectPageLayout id="objectPageLayout" showTitleInHeaderContent="true">
                <uxap:headerTitle>
                    <uxap:ObjectPageHeader objectImageShape="Circle" objectImageAlt="Profile" objectTitle="{Url}" isObjectIconAlwaysVisible="false" isObjectTitleAlwaysVisible="false" isObjectSubtitleAlwaysVisible="false">
                        <uxap:actions>
                            <uxap:ObjectPageHeaderActionButton type="Transparent" icon="sap-icon://full-screen" press="handleFullScreen" tooltip="Enter Full Screen Mode" visible="{= ${Layout>/actionButtonsInfo/midColumn/fullScreen} !== null }" />
                            <uxap:ObjectPageHeaderActionButton type="Transparent" icon="sap-icon://exit-full-screen" press="handleExitFullScreen" tooltip="Exit Full Screen Mode" visible="{= ${Layout>/actionButtonsInfo/midColumn/exitFullScreen} !== null }" />
                            <uxap:ObjectPageHeaderActionButton type="Transparent" icon="sap-icon://decline" press="handleClose" tooltip="Close column" visible="{= ${Layout>/actionButtonsInfo/midColumn/closeColumn} !== null }" />
                        </uxap:actions>
                    </uxap:ObjectPageHeader>
                </uxap:headerTitle>
                <uxap:sections>
                    <!-- <uxap:ObjectPageSection id="personalSection" title="{i18n>titleSectionPersonal}">
                        <uxap:subSections>
                            <uxap:ObjectPageSubSection id="nameSubSection" title="{i18n>titleSubSectionName}">
                                <uxap:blocks>
                                    <name:NameBlock id="nameBlock" showSubSectionMore="true" columnLayout="1" />
                                </uxap:blocks>
                            </uxap:ObjectPageSubSection>
                        </uxap:subSections>
                    </uxap:ObjectPageSection> -->
                    <uxap:ObjectPageSection id="cardSection" title="Gestecke Karten">
                        <uxap:subSections>
                            <uxap:ObjectPageSubSection id="cardSubSection" title="Gestecke Karten">
                                <uxap:blocks>
                                    <Table items="{Cards>/cards/card}">
                                        <columns>
                                            <Column>
                                                <Text text="Handle" />
                                            </Column>
                                            <Column>
                                                <Text text="Kartenhalter" />
                                            </Column>
                                            <Column>
                                                <Text text="Typ" />
                                            </Column>
                                            <Column>
                                                <Text text="Zertifikatsauslaufdatum" />
                                            </Column>
                                            <Column>
                                                <Text text="Iccsn" />
                                            </Column>
                                            <Column>
                                                <Text text="insertTime" />
                                            </Column>
                                            <Column>
                                                <Text text="slotId" />
                                            </Column>
                                            <Column>

                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem>
                                                <Text text="{Cards>cardHandle}" />
                                                <Text text="{Cards>cardHolderName}" />
                                                <Text text="{Cards>cardType}" />
                                                <Text text="{Cards>certificateExpirationDate}" />
                                                <Text text="{Cards>iccsn}" />
                                                <Text text="{Cards>insertTime}" />
                                                <Text text="{Cards>slotId}" />
                                                <MenuButton text="Aktion ...">
                                                    <Menu>
                                                        <MenuItem text="Verify PIN" press="onVerifyPin" />
                                                        <MenuItem text="Change PIN.QES" press="onChangePinQes" />
                                                        <MenuItem text="Change PIN.CH" press="onChangePinCh" />
                                                    </Menu>
                                                </MenuButton>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </uxap:blocks>
                            </uxap:ObjectPageSubSection>
                        </uxap:subSections>
                    </uxap:ObjectPageSection>

                    <uxap:ObjectPageSection id="certificatesSection" title="Vorhandene Zertifikate">
                        <uxap:subSections>
                            <uxap:ObjectPageSubSection id="certificatesSubSection" title="Vorhandene Zertifikate">
                                <uxap:blocks>
                                    <Table items="{CardTerminals>/cardTerminals/cardTerminal}">
                                        <columns>
                                            <Column>
                                                <Text text="Connected" />
                                            </Column>
                                            <Column>
                                                <Text text="Name" />
                                            </Column>
                                            <Column>
                                                <Text text="IP" />
                                            </Column>
                                            <Column>
                                                <Text text="Product" />
                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem>
                                                <Text text="{CardTerminals>connected}" />
                                                <Text text="{CardTerminals>name}" />
                                                <Text text="{CardTerminals>IPAddress/IPV4Address}" />
                                                <Text text="{CardTerminals>productInformation/productIdentification/productCode} {CardTerminals>productInformation/productIdentification/productVendorID} {CardTerminals>productInformation/productIdentification/productVersion/local/FWVersion}" />
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </uxap:blocks>
                            </uxap:ObjectPageSubSection>
                        </uxap:subSections>
                    </uxap:ObjectPageSection>

                    <uxap:ObjectPageSection id="cardTerminalSection" title="Angeschlossene Kartenterminals">
                        <uxap:subSections>
                            <uxap:ObjectPageSubSection id="cardTerminalSubSection" title="Angeschlossene Kartenterminals">
                                <uxap:blocks>
                                    <Table items="{CardTerminals>/cardTerminals/cardTerminal}">
                                        <columns>
                                            <Column>
                                                <Text text="Connected" />
                                            </Column>
                                            <Column>
                                                <Text text="Name" />
                                            </Column>
                                            <Column>
                                                <Text text="IP" />
                                            </Column>
                                            <Column>
                                                <Text text="Product" />
                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem>
                                                <Text text="{CardTerminals>connected}" />
                                                <Text text="{CardTerminals>name}" />
                                                <Text text="{CardTerminals>IPAddress/IPV4Address}" />
                                                <Text text="{CardTerminals>productInformation/productIdentification/productCode} {CardTerminals>productInformation/productIdentification/productVendorID} {CardTerminals>productInformation/productIdentification/productVersion/local/FWVersion}" />
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </uxap:blocks>
                            </uxap:ObjectPageSubSection>
                        </uxap:subSections>
                    </uxap:ObjectPageSection>
                    <uxap:ObjectPageSection id="metricsSection" title="Metrics für diesen Konnector">
                        <uxap:subSections>
                            <uxap:ObjectPageSubSection id="metricsSubSection" title="Aktuelle Daten">
                                <uxap:blocks>
                                    <Table>
                                        <columns>
                                            <Column>
                                                <Text text="Metric" />
                                            </Column>
                                            <Column>
                                                <Text text="Value" />
                                            </Column>
                                            <Column>
                                                <Text text="Count" />
                                            </Column>
                                            <Column>
                                                <Text text="Min" />
                                            </Column>
                                            <Column>
                                                <Text text="Max" />
                                            </Column>
                                            <Column>
                                                <Text text="Mean" />
                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem>
                                                <Text text="Connector Response Times" />
                                                <Text text="" />
                                                <Text text="{Metrics>/connectorResponseTime/count}" />
                                                <Text text="{Metrics>/connectorResponseTime/min}" />
                                                <Text text="{Metrics>/connectorResponseTime/max}" />
                                                <Text text="{Metrics>/connectorResponseTime/mean}" />
                                            </ColumnListItem>
                                            <ColumnListItem>
                                                <Text text="Currently ConnectedCards" />
                                                <Text text="{Metrics>/currentlyConnectedCards}" />
                                                <Text text="" />
                                                <Text text="" />
                                                <Text text="" />
                                                <Text text="" />
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </uxap:blocks>
                            </uxap:ObjectPageSubSection>
                        </uxap:subSections>
                    </uxap:ObjectPageSection>
                </uxap:sections>
            </uxap:ObjectPageLayout>
        </content>
    </Page>
</mvc:View>