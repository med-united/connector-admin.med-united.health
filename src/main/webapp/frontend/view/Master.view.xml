<mvc:View displayBlock="true"
    controllerName="sap.f.ShellBarWithFlexibleColumnLayout.controller.Master" height="100%"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc">
    <f:DynamicPage id="dynamicPageId"
        toggleHeaderOnTitleClick="false">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Konnektorverwaltung" />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>

        <!-- DynamicPage Content -->
        <f:content>
            <Table
                id="runtimeConfigTable"
                inset="false"
                items="{
						path: '/RuntimeConfigs'
					}"
                growing="true" growingScrollToLoad="true" growingThreshold="25" autoPopinMode="true"
                mode="MultiSelect">
                <headerToolbar>
                    <OverflowToolbar>
                        <ToolbarSpacer />
                        <SearchField search="onSearch" width="17.5rem" />
                        <OverflowToolbarButton icon="sap-icon://add" type="Transparent"
                            press="onAdd" />
                        <OverflowToolbarButton icon="sap-icon://sort" type="Transparent"
                            press="onSort" />
                        <OverflowToolbarButton icon="sap-icon://delete" type="Transparent"
                            press="onDelete" />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column width="12em">
                        <Text text="Benutzer-ID" />
                    </Column>
                    <Column width="12em">
                        <Text text="URL" />
                    </Column>
                    <Column width="12em">
                        <Text text="Signier-Port" />
                    </Column>
                    <Column width="12em">
                        <Text text="VZD-Port" />
                    </Column>
                    <Column width="12em">
                        <Text text="Mandant-ID" />
                    </Column>
                    <Column width="12em">
                        <Text text="System-ID Kunde" />
                    </Column>
                    <Column width="12em">
                        <Text text="Arbeitsplatz-ID" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation" vAlign="Middle" press="onListItemPress">
                        <cells>
                            <ObjectIdentifier text="{UserId}" />
                            <ObjectIdentifier text="{Url}" />
                            <ObjectIdentifier text="{SignPort}" />
                            <ObjectIdentifier text="{VzdPort}" />
                            <ObjectIdentifier text="{MandantId}" />
                            <ObjectIdentifier text="{ClientSystemId}" />
                            <ObjectIdentifier text="{WorkplaceId}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>

        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button type="Accept" text="Accept" />
                <Button type="Reject" text="Reject" />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>

</mvc:View>